<?xml version="1.0" encoding="UTF-8"?>
<phpunit
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
>
    <php>
        <var name="DB_DSN" value="mysql:dbname=dbal_gateway;host=localhost" />
        <var name="DB_USER" value="root" />
        <var name="DB_PASSWD" value="" />
        <var name="DB_DBNAME" value="dbal_gateway" />
        <var name="DB_HOST" value="localhost" />
        <server name="APP_ENVIRONMENT" value="travis" />
    </php>
    <testsuites>
        <testsuite name="default">
            <directory suffix="Test.php">src/DBALGateway/Tests/</directory>
            <exclude>src/DBALGateway/Tests/Base</exclude>
        </testsuite>
  </testsuites>  
    
</phpunit>
